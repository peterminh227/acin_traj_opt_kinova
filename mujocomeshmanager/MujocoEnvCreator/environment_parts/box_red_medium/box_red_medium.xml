            <site name="gripping_point" pos="0.18 0.08 0.275" quat="0 -1 0 0"/>
            <site name="grasp_pop" pos="0 0 0" size="0.01" rgba="1 0 0 1" group="0"/>
            <!-- Adjust the geometries to reflect the dimensions and apply the red plastic material -->
            <geom pos="0 0 0.00275" size="0.0525 0.08 0.0025" type="box" condim="3" name="Kiste_bottom" material="red_plastic"/>
            <geom pos="0.0525 0 0.0275" size="0.0025 0.08 0.0275" type="box" condim="3" name="Kiste_wall1" material="red_plastic"/>

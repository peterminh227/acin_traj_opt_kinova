        <!-- Add a red material with plastic-like properties -->
        <material name="red_plastic" rgba="1 0 0 1" shininess="0.8" specular="1"/>
    </asset>
    <worldbody>
        <!-- Uncomment and adjust the light if needed -->
        <!-- <light pos="0 0 1.5" dir="0 0 -1" directional="true"/> -->

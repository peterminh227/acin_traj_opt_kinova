            <geom pos="0 0.08 0.0275" size="0.0525 0.0025 0.0275" type="box" condim="3" name="Kiste_wall3" material="red_plastic"/>
            <geom pos="0 -0.08 0.0275" size="0.0525 0.0025 0.0275" type="box" condim="3" name="Kiste_wall4" material="red_plastic"/>
        </body>
    </worldbody>
</mujoco>

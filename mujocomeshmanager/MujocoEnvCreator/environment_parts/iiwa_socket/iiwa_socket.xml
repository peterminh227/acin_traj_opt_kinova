<mujoco model="iiwa_socket">
     <compiler convexhull="true" angle="radian" meshdir="environment_parts/" />
  <option integrator="implicitfast" timestep="0.004" jacobian="dense">
    <flag multiccd="enable"/>
  </option>
  <size nkey="1"/>
  <visual>
    <global azimuth="-120" elevation="-20"/>
        <quality shadowsize="2048"/>
        <headlight ambient="0.3 0.3 0.3" diffuse="0.6 0.6 0.6" specular="0.1 0.1 0.1"/>
    </visual>

      <!-- Define the assets -->
    <asset>
        <mesh name="iiwa_socket" file="iiwa_socket/assets/iiwa_socket.stl"/>
    </asset>

    <!-- Define the world body -->
    <worldbody>
        <!-- Load the hammer mesh and place it at the origin -->
        <body name="iiwa_socket" pos="0 0 0">
            <geom type="mesh" mesh="iiwa_socket" contype="0" conaffinity="0" group="0" rgba="0.4 0.4 0.4 1"/>
             <site name="robot_attach" pos="0 0 0.25" size="0.01" rgba="1 0 0 1" group="0"/>
             <geom name="collision_bottom" type="box"  contype="1" conaffinity="1" size="0.54 0.54 0.04" pos="0 0 0.04" rgba="0.8 0.6 0.4 1" group="3"/>
             <geom name="collision_middle" type="box"  contype="1" conaffinity="1" size="0.18 0.54 0.04" pos="0 0 0.12" group="3"/>
             <geom name="collision_top" type="box"  contype="1" conaffinity="1" size="0.18 0.18 0.0475" pos="0 0 0.2075" group="3"/>
        </body>

    </worldbody>
</mujoco>